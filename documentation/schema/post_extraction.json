{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "post_extraction.json",
    "title": "Per-Post Extraction",
    "description": "Extraction from a single social media post",
    "type": "object",
    "required": [
        "schema_version",
        "extraction_id",
        "extracted_at",
        "source",
        "content",
        "engagement",
        "classification",
        "linguistic_extraction",
        "claims",
        "value_driver_signals"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "2.0.0"
        },
        "extraction_id": {
            "type": "string",
            "format": "uuid"
        },
        "extracted_at": {
            "$ref": "#/definitions/iso_datetime"
        },
        "source": {
            "type": "object",
            "required": [
                "entity",
                "channel",
                "post_id",
                "permalink",
                "posted_at"
            ],
            "properties": {
                "entity": {
                    "type": "string"
                },
                "channel": {
                    "type": "string",
                    "enum": [
                        "linkedin",
                        "youtube",
                        "x",
                        "instagram",
                        "tiktok",
                        "facebook"
                    ]
                },
                "post_id": {
                    "type": "string"
                },
                "permalink": {
                    "$ref": "#/definitions/url"
                },
                "posted_at": {
                    "$ref": "#/definitions/iso_datetime"
                }
            }
        },
        "content": {
            "type": "object",
            "required": [
                "text",
                "word_count",
                "hashtags",
                "mentions",
                "links",
                "has_media",
                "media_type",
                "media_count"
            ],
            "properties": {
                "text": {
                    "type": "string"
                },
                "word_count": {
                    "type": "integer",
                    "minimum": 0
                },
                "hashtags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "mentions": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "links": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "has_media": {
                    "type": "boolean"
                },
                "media_type": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "enum": [
                        "image",
                        "video",
                        "carousel",
                        "document",
                        "poll",
                        null
                    ]
                },
                "media_count": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "engagement": {
            "type": "object",
            "required": [
                "likes",
                "comments",
                "shares",
                "total"
            ],
            "properties": {
                "likes": {
                    "type": "integer",
                    "minimum": 0
                },
                "comments": {
                    "type": "integer",
                    "minimum": 0
                },
                "shares": {
                    "type": "integer",
                    "minimum": 0
                },
                "views": {
                    "type": [
                        "integer",
                        "null"
                    ],
                    "minimum": 0
                },
                "total": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "classification": {
            "type": "object",
            "required": [
                "format",
                "purpose",
                "sentiment"
            ],
            "properties": {
                "format": {
                    "type": "string",
                    "enum": [
                        "image_post",
                        "video_post",
                        "text_only",
                        "carousel",
                        "link_post",
                        "poll",
                        "story",
                        "reel",
                        "short"
                    ]
                },
                "purpose": {
                    "type": "string",
                    "enum": [
                        "product_technology",
                        "company_culture",
                        "sustainability_esg",
                        "partnership_announcement",
                        "thought_leadership",
                        "award_recognition",
                        "event_coverage",
                        "recruitment",
                        "industry_news",
                        "customer_story",
                        "behind_the_scenes",
                        "other"
                    ]
                },
                "call_to_action": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "sentiment": {
                    "$ref": "#/definitions/sentiment"
                }
            }
        },
        "linguistic_extraction": {
            "type": "object",
            "properties": {
                "key_nouns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "key_verbs": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "key_adjectives": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "claims": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "claim_id",
                    "text",
                    "claim_type",
                    "evidence_id"
                ],
                "properties": {
                    "claim_id": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "claim_type": {
                        "type": "string"
                    },
                    "evidence_id": {
                        "type": "string",
                        "pattern": "^E[0-9]{5}$"
                    }
                }
            }
        },
        "value_driver_signals": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "driver_id",
                    "driver_name",
                    "signal_count",
                    "signal_keywords_found"
                ],
                "properties": {
                    "driver_id": {
                        "type": "string",
                        "pattern": "^VD[0-9]{3}$"
                    },
                    "driver_name": {
                        "type": "string"
                    },
                    "signal_count": {
                        "type": "integer",
                        "minimum": 0
                    },
                    "signal_keywords_found": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "images_in_post": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "channel_specific": {
            "description": "Platform-specific extracted fields (optional). The object should include a 'platform' discriminator.",
            "oneOf": [
                {
                    "$ref": "#/definitions/linkedin_specific"
                },
                {
                    "$ref": "#/definitions/youtube_specific"
                },
                {
                    "$ref": "#/definitions/instagram_specific"
                },
                {
                    "$ref": "#/definitions/x_specific"
                },
                {
                    "$ref": "#/definitions/facebook_specific"
                },
                {
                    "$ref": "#/definitions/tiktok_specific"
                }
            ]
        }
    },
    "definitions": {
        "iso_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 datetime string."
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "A valid URL (URI)."
        },
        "hex_color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Hex color in the form #RRGGBB."
        },
        "percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Share or percentage expressed as 0..1."
        },
        "confidence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score 0..1."
        },
        "evidence_id": {
            "type": "string",
            "pattern": "^(E|VE|EC)[0-9]{5}$",
            "description": "Evidence ID (E##### for general, VE##### for visual, EC##### for comments)."
        },
        "evidence_id_array": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/evidence_id"
            },
            "description": "Array of evidence IDs."
        },
        "channel_enum": {
            "type": "string",
            "enum": [
                "website",
                "linkedin",
                "youtube",
                "x",
                "instagram",
                "tiktok",
                "facebook"
            ],
            "description": "Supported owned channels."
        },
        "sentiment": {
            "type": "object",
            "description": "Structured sentiment and emotional tone (brand-authored content or audience content, depending on context).",
            "required": [
                "polarity",
                "emotional_tone"
            ],
            "properties": {
                "polarity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": -1,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "very_negative",
                                "negative",
                                "neutral",
                                "positive",
                                "very_positive"
                            ]
                        }
                    }
                },
                "emotional_tone": {
                    "type": "object",
                    "required": [
                        "primary",
                        "intensity"
                    ],
                    "properties": {
                        "primary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "secondary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "intensity": {
                            "type": "string",
                            "enum": [
                                "low",
                                "medium",
                                "high"
                            ]
                        }
                    }
                },
                "subjectivity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "objective",
                                "mixed",
                                "subjective"
                            ]
                        }
                    }
                }
            }
        },
        "linkedin_specific": {
            "type": "object",
            "required": [
                "platform"
            ],
            "properties": {
                "platform": {
                    "const": "linkedin"
                },
                "content_type": {
                    "type": "string",
                    "enum": [
                        "thought_leadership",
                        "company_update",
                        "product_update",
                        "employee_story",
                        "recruiting",
                        "event_promo",
                        "poll",
                        "document_carousel",
                        "external_link",
                        "article",
                        "video_native",
                        "image_static",
                        "other"
                    ]
                },
                "document_carousel": {
                    "type": "object",
                    "properties": {
                        "slide_count": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "doc_type": {
                            "type": "string",
                            "enum": [
                                "pdf",
                                "ppt",
                                "other"
                            ]
                        },
                        "has_cover_slide": {
                            "type": "boolean"
                        }
                    }
                },
                "article": {
                    "type": "object",
                    "properties": {
                        "word_count": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "estimated_read_time_minutes": {
                            "type": "integer",
                            "minimum": 0
                        }
                    }
                },
                "professional_context": {
                    "type": "object",
                    "properties": {
                        "role_targets": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "industry_terms": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "authority_markers": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "engagement_quality": {
                    "type": "object",
                    "properties": {
                        "comment_depth_estimate": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "high_value_comment_count": {
                            "type": "integer",
                            "minimum": 0
                        },
                        "share_rate": {
                            "type": "number",
                            "minimum": 0
                        }
                    }
                },
                "tone_register": {
                    "type": "string",
                    "enum": [
                        "formal",
                        "semi_formal",
                        "conversational"
                    ]
                }
            },
            "additionalProperties": true
        },
        "youtube_specific": {
            "type": "object",
            "required": [
                "platform"
            ],
            "properties": {
                "platform": {
                    "const": "youtube"
                },
                "video_type": {
                    "type": "string",
                    "enum": [
                        "long_form",
                        "shorts",
                        "live",
                        "other"
                    ]
                },
                "duration_seconds": {
                    "type": "integer",
                    "minimum": 0
                },
                "has_chapters": {
                    "type": "boolean"
                },
                "cta_placement": {
                    "type": "string",
                    "enum": [
                        "in_video",
                        "end_screen",
                        "description",
                        "pinned_comment",
                        "none",
                        "unknown"
                    ]
                },
                "production_style": {
                    "type": "string",
                    "enum": [
                        "studio",
                        "screen_recording",
                        "ugc",
                        "animated",
                        "mixed",
                        "unknown"
                    ]
                },
                "host_present": {
                    "type": "boolean"
                }
            },
            "additionalProperties": true
        },
        "instagram_specific": {
            "type": "object",
            "required": [
                "platform"
            ],
            "properties": {
                "platform": {
                    "const": "instagram"
                },
                "content_type": {
                    "type": "string",
                    "enum": [
                        "reel",
                        "carousel",
                        "single_image",
                        "story",
                        "live",
                        "other"
                    ]
                },
                "carousel_slide_count": {
                    "type": "integer",
                    "minimum": 1
                },
                "caption_length": {
                    "type": "string",
                    "enum": [
                        "short",
                        "medium",
                        "long",
                        "unknown"
                    ]
                },
                "hashtags_count": {
                    "type": "integer",
                    "minimum": 0
                },
                "uses_trending_audio": {
                    "type": "boolean"
                },
                "on_screen_text_present": {
                    "type": "boolean"
                }
            },
            "additionalProperties": true
        },
        "x_specific": {
            "type": "object",
            "required": [
                "platform"
            ],
            "properties": {
                "platform": {
                    "const": "x"
                },
                "content_type": {
                    "type": "string",
                    "enum": [
                        "single",
                        "thread",
                        "quote_tweet",
                        "reply",
                        "space_promo",
                        "other"
                    ]
                },
                "is_thread": {
                    "type": "boolean"
                },
                "thread_length": {
                    "type": "integer",
                    "minimum": 1
                },
                "character_count": {
                    "type": "integer",
                    "minimum": 0
                },
                "contains_link": {
                    "type": "boolean"
                },
                "mentions_count": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "additionalProperties": true
        },
        "facebook_specific": {
            "type": "object",
            "required": [
                "platform"
            ],
            "properties": {
                "platform": {
                    "const": "facebook"
                },
                "content_type": {
                    "type": "string",
                    "enum": [
                        "link",
                        "video",
                        "image",
                        "carousel",
                        "event",
                        "text",
                        "other"
                    ]
                },
                "is_group_context": {
                    "type": "boolean"
                },
                "reactions_available": {
                    "type": "boolean"
                }
            },
            "additionalProperties": true
        },
        "tiktok_specific": {
            "type": "object",
            "required": [
                "platform"
            ],
            "properties": {
                "platform": {
                    "const": "tiktok"
                },
                "content_type": {
                    "type": "string",
                    "enum": [
                        "short_video",
                        "live",
                        "other"
                    ]
                },
                "duration_seconds": {
                    "type": "integer",
                    "minimum": 0
                },
                "uses_trending_audio": {
                    "type": "boolean"
                },
                "hook_type": {
                    "type": "string",
                    "enum": [
                        "question",
                        "bold_claim",
                        "visual_surprise",
                        "storytime",
                        "trend",
                        "other",
                        "unknown"
                    ]
                },
                "cta_prompt": {
                    "type": "string",
                    "enum": [
                        "follow",
                        "link_in_bio",
                        "comment_prompt",
                        "share_prompt",
                        "none",
                        "unknown"
                    ]
                }
            },
            "additionalProperties": true
        }
    }
}