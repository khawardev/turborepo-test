{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "brand_narrative.json",
    "title": "Brand Narrative Synthesis",
    "description": "Story structure analysis with evidence",
    "type": "object",
    "required": [
        "schema_version",
        "generated_at",
        "entity",
        "synthesis_type",
        "narrative_elements",
        "narrative_arcs",
        "origin_story",
        "transformation_promise",
        "narrative_tensions"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "2.0.0"
        },
        "generated_at": {
            "$ref": "#/definitions/iso_datetime"
        },
        "entity": {
            "type": "string"
        },
        "synthesis_type": {
            "type": "string",
            "const": "brand_narrative"
        },
        "narrative_elements": {
            "type": "object",
            "required": [
                "hero",
                "antagonist",
                "core_tension",
                "resolution"
            ],
            "properties": {
                "hero": {
                    "type": "object",
                    "required": [
                        "description",
                        "explicit_references",
                        "implicit_signals",
                        "hero_journey_stage",
                        "confidence",
                        "evidence_ids"
                    ],
                    "properties": {
                        "description": {
                            "type": "string"
                        },
                        "explicit_references": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "implicit_signals": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "hero_journey_stage": {
                            "type": "string"
                        },
                        "confidence": {
                            "$ref": "#/definitions/confidence_score"
                        },
                        "evidence_ids": {
                            "$ref": "#/definitions/evidence_id_array"
                        }
                    }
                },
                "antagonist": {
                    "type": "object",
                    "required": [
                        "description",
                        "explicit_references",
                        "implicit_signals",
                        "antagonist_type",
                        "confidence",
                        "evidence_ids"
                    ],
                    "properties": {
                        "description": {
                            "type": "string"
                        },
                        "explicit_references": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "implicit_signals": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "antagonist_type": {
                            "type": "string",
                            "enum": [
                                "competitor",
                                "systemic_challenge",
                                "status_quo",
                                "external_force",
                                "internal_struggle"
                            ]
                        },
                        "confidence": {
                            "$ref": "#/definitions/confidence_score"
                        },
                        "evidence_ids": {
                            "$ref": "#/definitions/evidence_id_array"
                        }
                    }
                },
                "core_tension": {
                    "type": "object",
                    "required": [
                        "description",
                        "tension_type",
                        "emotional_stakes",
                        "confidence",
                        "evidence_ids"
                    ],
                    "properties": {
                        "description": {
                            "type": "string"
                        },
                        "tension_type": {
                            "type": "string"
                        },
                        "emotional_stakes": {
                            "type": "string"
                        },
                        "confidence": {
                            "$ref": "#/definitions/confidence_score"
                        },
                        "evidence_ids": {
                            "$ref": "#/definitions/evidence_id_array"
                        }
                    }
                },
                "resolution": {
                    "type": "object",
                    "required": [
                        "description",
                        "resolution_mechanism",
                        "resolution_promise",
                        "confidence",
                        "evidence_ids"
                    ],
                    "properties": {
                        "description": {
                            "type": "string"
                        },
                        "resolution_mechanism": {
                            "type": "string"
                        },
                        "resolution_promise": {
                            "type": "string"
                        },
                        "confidence": {
                            "$ref": "#/definitions/confidence_score"
                        },
                        "evidence_ids": {
                            "$ref": "#/definitions/evidence_id_array"
                        }
                    }
                }
            }
        },
        "narrative_arcs": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "arc_id",
                    "arc_name",
                    "description",
                    "frequency",
                    "presence_by_channel",
                    "key_phrases",
                    "evidence_ids"
                ],
                "properties": {
                    "arc_id": {
                        "type": "string",
                        "pattern": "^ARC[0-9]{3}$"
                    },
                    "arc_name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "frequency": {
                        "type": "string",
                        "enum": [
                            "high",
                            "medium",
                            "low"
                        ]
                    },
                    "presence_by_channel": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "boolean"
                        }
                    },
                    "key_phrases": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "evidence_ids": {
                        "$ref": "#/definitions/evidence_id_array"
                    }
                }
            }
        },
        "origin_story": {
            "type": "object",
            "required": [
                "explicit_origin",
                "implied_elements",
                "origin_usage_frequency",
                "strategic_opportunity",
                "evidence_ids"
            ],
            "properties": {
                "explicit_origin": {
                    "type": "boolean"
                },
                "implied_elements": {
                    "type": "object",
                    "properties": {
                        "founding_era": {
                            "type": "string"
                        },
                        "founding_narrative": {
                            "type": "string"
                        },
                        "growth_narrative": {
                            "type": "string"
                        }
                    }
                },
                "origin_usage_frequency": {
                    "type": "string",
                    "enum": [
                        "high",
                        "medium",
                        "low",
                        "none"
                    ]
                },
                "strategic_opportunity": {
                    "type": "string"
                },
                "evidence_ids": {
                    "$ref": "#/definitions/evidence_id_array"
                }
            }
        },
        "transformation_promise": {
            "type": "object",
            "required": [
                "before_state",
                "after_state",
                "transformation_mechanism",
                "transformation_credibility",
                "proof_points_cited",
                "evidence_ids"
            ],
            "properties": {
                "before_state": {
                    "type": "string"
                },
                "after_state": {
                    "type": "string"
                },
                "transformation_mechanism": {
                    "type": "string"
                },
                "transformation_credibility": {
                    "type": "string",
                    "enum": [
                        "high",
                        "medium_high",
                        "medium",
                        "medium_low",
                        "low"
                    ]
                },
                "proof_points_cited": {
                    "type": "integer"
                },
                "evidence_ids": {
                    "$ref": "#/definitions/evidence_id_array"
                }
            }
        },
        "narrative_tensions": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "tension_id",
                    "description",
                    "manifestation",
                    "resolution_observed",
                    "strategic_implication",
                    "evidence_ids"
                ],
                "properties": {
                    "tension_id": {
                        "type": "string",
                        "pattern": "^NT[0-9]{3}$"
                    },
                    "description": {
                        "type": "string"
                    },
                    "manifestation": {
                        "type": "string"
                    },
                    "resolution_observed": {
                        "type": "boolean"
                    },
                    "strategic_implication": {
                        "type": "string"
                    },
                    "evidence_ids": {
                        "$ref": "#/definitions/evidence_id_array"
                    }
                }
            }
        }
    },
    "definitions": {
        "iso_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 datetime string."
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "A valid URL (URI)."
        },
        "hex_color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Hex color in the form #RRGGBB."
        },
        "percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Share or percentage expressed as 0..1."
        },
        "confidence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score 0..1."
        },
        "evidence_id": {
            "type": "string",
            "pattern": "^(E|VE|EC)[0-9]{5}$",
            "description": "Evidence ID (E##### for general, VE##### for visual, EC##### for comments)."
        },
        "evidence_id_array": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/evidence_id"
            },
            "description": "Array of evidence IDs."
        },
        "channel_enum": {
            "type": "string",
            "enum": [
                "website",
                "linkedin",
                "youtube",
                "x",
                "instagram",
                "tiktok",
                "facebook"
            ],
            "description": "Supported owned channels."
        },
        "sentiment": {
            "type": "object",
            "description": "Structured sentiment and emotional tone (brand-authored content or audience content, depending on context).",
            "required": [
                "polarity",
                "emotional_tone"
            ],
            "properties": {
                "polarity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": -1,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "very_negative",
                                "negative",
                                "neutral",
                                "positive",
                                "very_positive"
                            ]
                        }
                    }
                },
                "emotional_tone": {
                    "type": "object",
                    "required": [
                        "primary",
                        "intensity"
                    ],
                    "properties": {
                        "primary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "secondary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "intensity": {
                            "type": "string",
                            "enum": [
                                "low",
                                "medium",
                                "high"
                            ]
                        }
                    }
                },
                "subjectivity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "objective",
                                "mixed",
                                "subjective"
                            ]
                        }
                    }
                }
            }
        }
    }
}