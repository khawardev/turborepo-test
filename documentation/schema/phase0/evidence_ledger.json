{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "evidence_ledger.json",
    "title": "Evidence Ledger",
    "description": "Master index of all evidence with unique IDs for citation",
    "type": "object",
    "required": [
        "schema_version",
        "generated_at",
        "run_id",
        "tenant_id",
        "evidence_count",
        "evidence_by_type",
        "evidence_by_entity",
        "evidence"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "2.0.0"
        },
        "generated_at": {
            "$ref": "#/definitions/iso_datetime"
        },
        "run_id": {
            "type": "string",
            "format": "uuid"
        },
        "tenant_id": {
            "type": "string",
            "format": "uuid"
        },
        "evidence_count": {
            "type": "integer",
            "minimum": 0
        },
        "evidence_by_type": {
            "type": "object",
            "required": [
                "webpage",
                "social_post",
                "comment",
                "image"
            ],
            "properties": {
                "webpage": {
                    "type": "integer",
                    "minimum": 0
                },
                "social_post": {
                    "type": "integer",
                    "minimum": 0
                },
                "comment": {
                    "type": "integer",
                    "minimum": 0
                },
                "image": {
                    "type": "integer",
                    "minimum": 0
                }
            }
        },
        "evidence_by_entity": {
            "type": "object",
            "additionalProperties": {
                "type": "integer",
                "minimum": 0
            }
        },
        "evidence": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "evidence_id",
                    "source_type",
                    "source_channel",
                    "source_entity",
                    "source_url",
                    "content_type",
                    "excerpt",
                    "full_content_uri",
                    "extraction_date"
                ],
                "properties": {
                    "evidence_id": {
                        "type": "string",
                        "pattern": "^(E|VE|EC)[0-9]{5}$"
                    },
                    "source_type": {
                        "type": "string",
                        "enum": [
                            "webpage",
                            "social_post",
                            "comment",
                            "image"
                        ]
                    },
                    "source_channel": {
                        "type": "string",
                        "enum": [
                            "website",
                            "linkedin",
                            "youtube",
                            "x",
                            "instagram",
                            "tiktok",
                            "facebook"
                        ]
                    },
                    "source_entity": {
                        "type": "string"
                    },
                    "source_url": {
                        "$ref": "#/definitions/url"
                    },
                    "source_timestamp": {
                        "oneOf": [
                            {
                                "$ref": "#/definitions/iso_datetime"
                            },
                            {
                                "type": "null"
                            }
                        ]
                    },
                    "content_type": {
                        "type": "string",
                        "enum": [
                            "text",
                            "image",
                            "video",
                            "mixed"
                        ]
                    },
                    "excerpt": {
                        "type": "string",
                        "maxLength": 500
                    },
                    "full_content_uri": {
                        "type": "string"
                    },
                    "extraction_date": {
                        "$ref": "#/definitions/iso_datetime"
                    },
                    "metadata": {
                        "type": "object",
                        "additionalProperties": true
                    }
                }
            }
        }
    },
    "definitions": {
        "iso_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 datetime string."
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "A valid URL (URI)."
        },
        "hex_color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Hex color in the form #RRGGBB."
        },
        "percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Share or percentage expressed as 0..1."
        },
        "confidence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score 0..1."
        },
        "evidence_id": {
            "type": "string",
            "pattern": "^(E|VE|EC)[0-9]{5}$",
            "description": "Evidence ID (E##### for general, VE##### for visual, EC##### for comments)."
        },
        "evidence_id_array": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/evidence_id"
            },
            "description": "Array of evidence IDs."
        },
        "channel_enum": {
            "type": "string",
            "enum": [
                "website",
                "linkedin",
                "youtube",
                "x",
                "instagram",
                "tiktok",
                "facebook"
            ],
            "description": "Supported owned channels."
        },
        "sentiment": {
            "type": "object",
            "description": "Structured sentiment and emotional tone (brand-authored content or audience content, depending on context).",
            "required": [
                "polarity",
                "emotional_tone"
            ],
            "properties": {
                "polarity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": -1,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "very_negative",
                                "negative",
                                "neutral",
                                "positive",
                                "very_positive"
                            ]
                        }
                    }
                },
                "emotional_tone": {
                    "type": "object",
                    "required": [
                        "primary",
                        "intensity"
                    ],
                    "properties": {
                        "primary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "secondary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "intensity": {
                            "type": "string",
                            "enum": [
                                "low",
                                "medium",
                                "high"
                            ]
                        }
                    }
                },
                "subjectivity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "objective",
                                "mixed",
                                "subjective"
                            ]
                        }
                    }
                }
            }
        }
    }
}