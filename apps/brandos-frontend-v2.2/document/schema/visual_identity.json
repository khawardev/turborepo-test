{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://brandos.ai/schemas/visual_identity.json",
    "title": "Visual Identity",
    "type": "object",
    "description": "Entity-level visual identity synthesis across website and social.",
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "2.0.0"
        },
        "generated_at": {
            "$ref": "#/definitions/iso_datetime"
        },
        "entity": {
            "type": "string"
        },
        "core_palette": {
            "type": "object",
            "properties": {
                "primary": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/hex_color"
                    }
                },
                "secondary": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/hex_color"
                    }
                },
                "accent": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/hex_color"
                    }
                },
                "notes": {
                    "type": "string"
                },
                "evidence_ids": {
                    "$ref": "#/definitions/evidence_id_array"
                }
            }
        },
        "imagery_style": {
            "type": "object",
            "properties": {
                "photography_traits": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "illustration_traits": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "people_representation": {
                    "type": "string"
                },
                "environments": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "evidence_ids": {
                    "$ref": "#/definitions/evidence_id_array"
                }
            }
        },
        "layout_and_templates": {
            "type": "object",
            "properties": {
                "common_layout_patterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "template_systems": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "typography_observations": {
                    "type": "string"
                },
                "evidence_ids": {
                    "$ref": "#/definitions/evidence_id_array"
                }
            }
        },
        "distinctive_assets": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "asset",
                    "evidence_ids"
                ],
                "properties": {
                    "asset": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "evidence_ids": {
                        "$ref": "#/definitions/evidence_id_array"
                    }
                }
            }
        },
        "channel_variations": {
            "type": "object",
            "description": "Notable channel-specific differences in visual execution.",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "notes": {
                        "type": "string"
                    },
                    "evidence_ids": {
                        "$ref": "#/definitions/evidence_id_array"
                    }
                }
            }
        },
        "consistency_scores": {
            "type": "object",
            "properties": {
                "palette_consistency": {
                    "$ref": "#/definitions/percentage"
                },
                "template_consistency": {
                    "$ref": "#/definitions/percentage"
                },
                "notes": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "schema_version",
        "generated_at",
        "entity"
    ],
    "definitions": {
        "iso_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 datetime string."
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "A valid URL (URI)."
        },
        "hex_color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Hex color in the form #RRGGBB."
        },
        "percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Share or percentage expressed as 0..1."
        },
        "confidence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score 0..1."
        },
        "evidence_id": {
            "type": "string",
            "pattern": "^(E|VE|EC)[0-9]{5}$",
            "description": "Evidence ID (E##### for general, VE##### for visual, EC##### for comments)."
        },
        "evidence_id_array": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/evidence_id"
            },
            "description": "Array of evidence IDs."
        },
        "channel_enum": {
            "type": "string",
            "enum": [
                "website",
                "linkedin",
                "youtube",
                "x",
                "instagram",
                "tiktok",
                "facebook"
            ],
            "description": "Supported owned channels."
        },
        "sentiment": {
            "type": "object",
            "description": "Structured sentiment and emotional tone (brand-authored content or audience content, depending on context).",
            "required": [
                "polarity",
                "emotional_tone"
            ],
            "properties": {
                "polarity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": -1,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "very_negative",
                                "negative",
                                "neutral",
                                "positive",
                                "very_positive"
                            ]
                        }
                    }
                },
                "emotional_tone": {
                    "type": "object",
                    "required": [
                        "primary",
                        "intensity"
                    ],
                    "properties": {
                        "primary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "secondary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "intensity": {
                            "type": "string",
                            "enum": [
                                "low",
                                "medium",
                                "high"
                            ]
                        }
                    }
                },
                "subjectivity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "objective",
                                "mixed",
                                "subjective"
                            ]
                        }
                    }
                }
            }
        }
    }
}