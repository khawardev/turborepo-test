{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://brandos.ai/schemas/fact_base.json",
    "title": "Brand OS Fact Base",
    "type": "object",
    "description": "Entity-level verified facts and explicit claims extracted from website content.",
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "2.0.0"
        },
        "generated_at": {
            "$ref": "#/definitions/iso_datetime"
        },
        "entity": {
            "type": "string",
            "description": "Entity identifier (e.g., client or competitor slug)."
        },
        "facts": {
            "type": "array",
            "description": "Verified facts explicitly stated in source materials.",
            "items": {
                "type": "object",
                "required": [
                    "category",
                    "statement",
                    "evidence_ids"
                ],
                "properties": {
                    "category": {
                        "type": "string",
                        "enum": [
                            "company",
                            "product",
                            "service",
                            "pricing",
                            "compliance",
                            "operations",
                            "other"
                        ]
                    },
                    "statement": {
                        "type": "string"
                    },
                    "normalized_value": {
                        "description": "Optional normalized value (string/number/bool) when applicable.",
                        "oneOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "number"
                            },
                            {
                                "type": "boolean"
                            },
                            {
                                "type": "null"
                            }
                        ]
                    },
                    "evidence_ids": {
                        "$ref": "#/definitions/evidence_id_array"
                    },
                    "confidence": {
                        "$ref": "#/definitions/confidence_score"
                    },
                    "notes": {
                        "type": "string"
                    }
                }
            }
        },
        "conflicts": {
            "type": "array",
            "description": "Conflicting statements observed across sources.",
            "items": {
                "type": "object",
                "required": [
                    "statement_a",
                    "statement_b",
                    "evidence_ids_a",
                    "evidence_ids_b"
                ],
                "properties": {
                    "statement_a": {
                        "type": "string"
                    },
                    "statement_b": {
                        "type": "string"
                    },
                    "evidence_ids_a": {
                        "$ref": "#/definitions/evidence_id_array"
                    },
                    "evidence_ids_b": {
                        "$ref": "#/definitions/evidence_id_array"
                    },
                    "resolution_note": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": [
        "schema_version",
        "generated_at",
        "entity",
        "facts"
    ],
    "definitions": {
        "iso_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 datetime string."
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "A valid URL (URI)."
        },
        "hex_color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Hex color in the form #RRGGBB."
        },
        "percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Share or percentage expressed as 0..1."
        },
        "confidence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score 0..1."
        },
        "evidence_id": {
            "type": "string",
            "pattern": "^(E|VE|EC)[0-9]{5}$",
            "description": "Evidence ID (E##### for general, VE##### for visual, EC##### for comments)."
        },
        "evidence_id_array": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/evidence_id"
            },
            "description": "Array of evidence IDs."
        },
        "channel_enum": {
            "type": "string",
            "enum": [
                "website",
                "linkedin",
                "youtube",
                "x",
                "instagram",
                "tiktok",
                "facebook"
            ],
            "description": "Supported owned channels."
        },
        "sentiment": {
            "type": "object",
            "description": "Structured sentiment and emotional tone (brand-authored content or audience content, depending on context).",
            "required": [
                "polarity",
                "emotional_tone"
            ],
            "properties": {
                "polarity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": -1,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "very_negative",
                                "negative",
                                "neutral",
                                "positive",
                                "very_positive"
                            ]
                        }
                    }
                },
                "emotional_tone": {
                    "type": "object",
                    "required": [
                        "primary",
                        "intensity"
                    ],
                    "properties": {
                        "primary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "secondary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "intensity": {
                            "type": "string",
                            "enum": [
                                "low",
                                "medium",
                                "high"
                            ]
                        }
                    }
                },
                "subjectivity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "objective",
                                "mixed",
                                "subjective"
                            ]
                        }
                    }
                }
            }
        }
    }
}