{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "internal_consistency.json",
    "title": "Internal Consistency Analysis",
    "description": "Cross-channel consistency measurement",
    "type": "object",
    "required": [
        "schema_version",
        "generated_at",
        "entity",
        "overall_consistency_score",
        "score_interpretation",
        "dimension_scores",
        "channel_pair_analysis",
        "consistency_gaps",
        "strongest_unifiers",
        "fragmentation_risks",
        "recommendations"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "2.0.0"
        },
        "generated_at": {
            "$ref": "#/definitions/iso_datetime"
        },
        "entity": {
            "type": "string"
        },
        "overall_consistency_score": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
        },
        "score_interpretation": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "dimension_scores": {
            "type": "object",
            "required": [
                "sentiment_consistency",
                "visual_consistency",
                "theme_consistency",
                "voice_consistency",
                "messaging_consistency",
                "proof_consistency"
            ],
            "properties": {
                "voice_consistency": {
                    "$ref": "#/definitions/consistency_dimension"
                },
                "theme_consistency": {
                    "$ref": "#/definitions/consistency_dimension"
                },
                "visual_consistency": {
                    "$ref": "#/definitions/consistency_dimension"
                },
                "messaging_consistency": {
                    "$ref": "#/definitions/consistency_dimension"
                },
                "proof_consistency": {
                    "$ref": "#/definitions/consistency_dimension"
                },
                "sentiment_consistency": {
                    "$ref": "#/definitions/consistency_dimension"
                }
            }
        },
        "channel_pair_analysis": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "consistency_score": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100
                    },
                    "alignment_areas": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "divergence_areas": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "consistency_gaps": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "gap_id",
                    "gap_description",
                    "severity",
                    "channels_affected",
                    "impact",
                    "recommendation",
                    "effort"
                ],
                "properties": {
                    "gap_id": {
                        "type": "string",
                        "pattern": "^CG[0-9]{3}$"
                    },
                    "gap_description": {
                        "type": "string"
                    },
                    "severity": {
                        "type": "string",
                        "enum": [
                            "critical",
                            "significant",
                            "moderate",
                            "minor"
                        ]
                    },
                    "channels_affected": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "impact": {
                        "type": "string"
                    },
                    "recommendation": {
                        "type": "string"
                    },
                    "effort": {
                        "type": "string",
                        "enum": [
                            "high",
                            "medium",
                            "low"
                        ]
                    }
                }
            }
        },
        "strongest_unifiers": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "fragmentation_risks": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "recommendations": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "priority",
                    "recommendation",
                    "expected_consistency_lift",
                    "effort",
                    "timeline"
                ],
                "properties": {
                    "priority": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "recommendation": {
                        "type": "string"
                    },
                    "expected_consistency_lift": {
                        "type": "string"
                    },
                    "effort": {
                        "type": "string",
                        "enum": [
                            "high",
                            "medium",
                            "low"
                        ]
                    },
                    "timeline": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "definitions": {
        "consistency_dimension": {
            "type": "object",
            "required": [
                "score",
                "assessment",
                "evidence"
            ],
            "properties": {
                "score": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                },
                "assessment": {
                    "type": "string"
                },
                "evidence": {
                    "type": "object"
                }
            }
        },
        "iso_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 datetime string."
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "A valid URL (URI)."
        },
        "hex_color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Hex color in the form #RRGGBB."
        },
        "percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Share or percentage expressed as 0..1."
        },
        "confidence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score 0..1."
        },
        "evidence_id": {
            "type": "string",
            "pattern": "^(E|VE|EC)[0-9]{5}$",
            "description": "Evidence ID (E##### for general, VE##### for visual, EC##### for comments)."
        },
        "evidence_id_array": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/evidence_id"
            },
            "description": "Array of evidence IDs."
        },
        "channel_enum": {
            "type": "string",
            "enum": [
                "website",
                "linkedin",
                "youtube",
                "x",
                "instagram",
                "tiktok",
                "facebook"
            ],
            "description": "Supported owned channels."
        },
        "sentiment": {
            "type": "object",
            "description": "Structured sentiment and emotional tone (brand-authored content or audience content, depending on context).",
            "required": [
                "polarity",
                "emotional_tone"
            ],
            "properties": {
                "polarity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": -1,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "very_negative",
                                "negative",
                                "neutral",
                                "positive",
                                "very_positive"
                            ]
                        }
                    }
                },
                "emotional_tone": {
                    "type": "object",
                    "required": [
                        "primary",
                        "intensity"
                    ],
                    "properties": {
                        "primary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "secondary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "intensity": {
                            "type": "string",
                            "enum": [
                                "low",
                                "medium",
                                "high"
                            ]
                        }
                    }
                },
                "subjectivity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "objective",
                                "mixed",
                                "subjective"
                            ]
                        }
                    }
                }
            }
        }
    }
}