{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://brandos.ai/schemas/content_strategy.json",
    "title": "Content Strategy",
    "type": "object",
    "description": "Entity-level content strategy recommendations grounded in brand platform and channel realities.",
    "properties": {
        "schema_version": {
            "type": "string",
            "const": "2.0.0"
        },
        "generated_at": {
            "$ref": "#/definitions/iso_datetime"
        },
        "entity": {
            "type": "string"
        },
        "strategy_summary": {
            "type": "string"
        },
        "content_pillars": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "objective",
                    "key_messages",
                    "recommended_formats",
                    "evidence_ids"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "objective": {
                        "type": "string"
                    },
                    "key_messages": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "recommended_formats": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "recommended_channels": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/channel_enum"
                        }
                    },
                    "emotional_tone_guidance": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "proof_assets_needed": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "evidence_ids": {
                        "$ref": "#/definitions/evidence_id_array"
                    }
                }
            }
        },
        "channel_playbooks": {
            "type": "object",
            "description": "Per-channel role definition and execution guidance.",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "role": {
                        "type": "string"
                    },
                    "audience_focus": {
                        "type": "string"
                    },
                    "format_priorities": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "cadence_recommendation": {
                        "type": "string"
                    },
                    "voice_notes": {
                        "type": "string"
                    },
                    "sentiment_notes": {
                        "type": "string"
                    },
                    "channel_specific_tips": {
                        "type": "string"
                    },
                    "evidence_ids": {
                        "$ref": "#/definitions/evidence_id_array"
                    }
                }
            }
        },
        "series_ideas": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "series_name",
                    "premise",
                    "formats",
                    "channels"
                ],
                "properties": {
                    "series_name": {
                        "type": "string"
                    },
                    "premise": {
                        "type": "string"
                    },
                    "formats": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "channels": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/channel_enum"
                        }
                    },
                    "example_topics": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "experimentation_roadmap": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "experiment",
                    "hypothesis",
                    "success_metric"
                ],
                "properties": {
                    "experiment": {
                        "type": "string"
                    },
                    "hypothesis": {
                        "type": "string"
                    },
                    "success_metric": {
                        "type": "string"
                    },
                    "duration": {
                        "type": "string"
                    },
                    "notes": {
                        "type": "string"
                    }
                }
            }
        },
        "measurement_framework": {
            "type": "object",
            "properties": {
                "primary_kpis": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "leading_indicators": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "instrumentation_notes": {
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "schema_version",
        "generated_at",
        "entity",
        "content_pillars"
    ],
    "definitions": {
        "iso_datetime": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 datetime string."
        },
        "url": {
            "type": "string",
            "format": "uri",
            "description": "A valid URL (URI)."
        },
        "hex_color": {
            "type": "string",
            "pattern": "^#[0-9A-Fa-f]{6}$",
            "description": "Hex color in the form #RRGGBB."
        },
        "percentage": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Share or percentage expressed as 0..1."
        },
        "confidence_score": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confidence score 0..1."
        },
        "evidence_id": {
            "type": "string",
            "pattern": "^(E|VE|EC)[0-9]{5}$",
            "description": "Evidence ID (E##### for general, VE##### for visual, EC##### for comments)."
        },
        "evidence_id_array": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/evidence_id"
            },
            "description": "Array of evidence IDs."
        },
        "channel_enum": {
            "type": "string",
            "enum": [
                "website",
                "linkedin",
                "youtube",
                "x",
                "instagram",
                "tiktok",
                "facebook"
            ],
            "description": "Supported owned channels."
        },
        "sentiment": {
            "type": "object",
            "description": "Structured sentiment and emotional tone (brand-authored content or audience content, depending on context).",
            "required": [
                "polarity",
                "emotional_tone"
            ],
            "properties": {
                "polarity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": -1,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "very_negative",
                                "negative",
                                "neutral",
                                "positive",
                                "very_positive"
                            ]
                        }
                    }
                },
                "emotional_tone": {
                    "type": "object",
                    "required": [
                        "primary",
                        "intensity"
                    ],
                    "properties": {
                        "primary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "secondary": {
                            "type": "string",
                            "enum": [
                                "confident",
                                "enthusiastic",
                                "professional",
                                "empathetic",
                                "urgent",
                                "frustrated",
                                "skeptical",
                                "appreciative",
                                "neutral"
                            ]
                        },
                        "intensity": {
                            "type": "string",
                            "enum": [
                                "low",
                                "medium",
                                "high"
                            ]
                        }
                    }
                },
                "subjectivity": {
                    "type": "object",
                    "required": [
                        "score",
                        "label"
                    ],
                    "properties": {
                        "score": {
                            "type": "number",
                            "minimum": 0,
                            "maximum": 1
                        },
                        "label": {
                            "type": "string",
                            "enum": [
                                "objective",
                                "mixed",
                                "subjective"
                            ]
                        }
                    }
                }
            }
        }
    }
}